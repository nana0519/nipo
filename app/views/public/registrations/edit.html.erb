<h2 class="heading">社員編集</h2>

<%= form_with model: @end_user, url: other_end_user_registaration_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table">
    <tr>
      <th class="table__label"><%= f.label :名前 %></th>
      <td class="table__form"><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th class="table__label"><%= f.label :email %></th>
      <td class="table__form"><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th class="table__label">
        <%= f.label :新しいパスワード %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </th>
      <td class="table__form">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th class="table__label"><%= f.label :新しいパスワード %>（確認)</th>
      <td class="table__form"><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <th class="table__label"><%= f.label :現在のパスワード %></th>
      <td class="table__form"><%= f.password_field :current_password %></td>
    </tr>
  </table>

  <div class="btn">
    <%= f.submit "変更", class: "btn__green" %>
  </div>
<% end %>

<div>
  <%= link_to "社員一覧へ戻る", admin_end_users_path %>
</div>