<h2 class="heading">日報</h2>

<div class="link">
  <%= link_to "日報登録", new_admin_daily_report_path, class: "link__green" %>
</div>

<table class="table">
  <thead class="table__heading">
    <tr class="table__row">
      <th class="table__item">現場名</th>
    </tr>
  </thead>
  <tbody>
    <% @constructions.each do |construction| %>
      <tr class="table__row">
        <td class="table__item">
          <%= link_to end_users_index_admin_construction_path(construction) do %>
          <%= construction.construction_name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="paginate">
  <%= paginate @constructions %>
</div>