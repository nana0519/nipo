<%= render "layouts/error", resource: @daily_report %>

<h2 class="heading">日報登録</h2>

<%= form_with model: @daily_report, url: admin_daily_reports_path, loclal: false do |f| %>
  <table class="table">
    <tr>
      <th class="table__item">勤務月</th>
      <td class="table__item"><%= f.collection_select :work_schedule_id, WorkSchedule.all, :id, :date %></td>
    </tr>
    <tr>
      <th class="table__item">画像</th>
      <td class="table__item"><%= f.file_field :daily_report_images, multiple: true %></td>
    </tr>
    <tr>
      <th class="table__item">日付</th>
      <td class="table__item"><%= f.date_field :date %></td>
    </tr>
    <tr>
      <th class="table__item">記入者</th>
      <td class="table__item"><%= f.collection_select :end_user_id, EndUser.where(retirement: false), :id, :name %></td>
    </tr>
    <tr>
      <th class="table__item">業者名</th>
      <td class="table__item"><%= f.collection_select :company_id, Company.all, :id, :company_name %></td>
    </tr>
    <tr>
      <th class="table__item">現場名</th>
      <td class="table__item"><%= f.collection_select :construction_id, Construction.where(status: false), :id, :construction_name %></td>
    </tr>
    <tr>
      <th class="table__item">車両番号</th>
      <td class="table__item"><%= f.collection_select :car_id, Car.all, :id, :number %></td>
    </tr>
  </table>

  <div class="btn">
    <%= f.submit "登録", class: "btn__green" %>
  </div>
<% end %>